{
    "name": "appswithlove/statamic-one-click-content-translation",
    "description": "With the One-click Content Translation addon for Statamic, translations are done in a breeze, directly in the CMS.",
    "keywords": ["statamic", "translate", "cms", "deepl", "laravel"],
    "minimum-stability": "dev",
    "type": "library",
    "authors": [
        {
            "name": "Apps with love AG",
            "email": "support@appswithlove.com"
        },
        {
            "name": "Brylin Oleksii",
            "email": "brylin@moqod.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Appswithlove\\StatamicOneClickContentTranslation\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Translate Me",
            "description": "Translate Me addon"
        },
        "laravel": {
            "providers": [
                "Appswithlove\\StatamicOneClickContentTranslation\\ServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "deeplcom/deepl-php": "^0.4.0"
    },
    "require-dev": {
        "statamic/cms": "~3.2.15 || ~3.3.0"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
